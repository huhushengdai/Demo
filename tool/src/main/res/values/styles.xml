<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--login登录界面-->
    <style name="LoginText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/view_inner_padding</item>
        <item name="android:textSize">@dimen/small_title</item>
    </style>
    <style name="LoginEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/view_inner_padding</item>
        <item name="android:textSize">@dimen/text_or_button</item>
    </style>
    <style name="LoginCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_or_button</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>

    </style>
</resources>
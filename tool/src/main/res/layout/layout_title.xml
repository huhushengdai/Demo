<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/layout_title_left"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/view_inner_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/text_or_button"
        android:visibility="gone"
        app:layout_widthPercent="15%w"/>

    <TextView
        android:id="@+id/layout_title_center"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/view_inner_padding"
        android:text="@string/action_bar_title"
        android:textColor="@color/white"
        android:textSize="@dimen/app_bar"
        app:layout_widthPercent="70%w"/>

    <TextView
        android:id="@+id/layout_title_right"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/view_inner_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/text_or_button"
        android:visibility="gone"
        app:layout_widthPercent="15%w"/>
</com.zhy.android.percent.support.PercentLinearLayout>
